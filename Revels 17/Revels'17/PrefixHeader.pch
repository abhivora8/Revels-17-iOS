#define GLOBAL_PATTERN_COLOR_3 UIColorFromRGBWithAlpha(0x1e1e1e, 0.5)
#define GLOBAL_PATTERN_COLOR_4 UIColorFromRGBWithAlpha(0x2c2c2c, 0.5)

